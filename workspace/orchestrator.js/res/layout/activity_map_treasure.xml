<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapTreasureLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ojs.capabilities.phoneNumberCapability" >

    <ProgressBar
        android:id="@+id/mapTreasureBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/mapTreasureClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Stop" />

    <TextView
        android:id="@+id/mapTreasureMyPosition1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/mapTreasureClose"
        android:text="Lat:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mapTreasureMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapTreasureMyPosition2"
        android:layout_alignRight="@+id/mapTreasureBar"
        android:layout_below="@+id/mapTreasureBar"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:lines="4"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/mapTreasureDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapTreasureClose"
        android:layout_alignLeft="@+id/mapTreasureMyPosition2"
        android:layout_alignRight="@+id/mapTreasureClose"
        android:gravity="center"
        android:lines="4"
        android:text="Distance"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/mapTreasureMyPosition2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapTreasureMyPosition1"
        android:layout_alignRight="@+id/mapTreasureMyPosition1"
        android:layout_below="@+id/mapTreasureMyPosition1"
        android:text="Long:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mapTreasureBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapTreasureMyPosition2"
        android:layout_alignRight="@+id/mapTreasureMessage"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lines="2"
        android:text="Bluetooth proximity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/mapTreasurePoints"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="fill_vertical|center"
        android:lines="1"
        android:text="+5"
        android:textColor="#00CC00"
        android:textSize="200sp" />

</RelativeLayout>