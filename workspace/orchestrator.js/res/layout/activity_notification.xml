<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ojs.capabilities.notificationCapability" >

    <ImageView
        android:id="@+id/notificationBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/background" />

    <TextView
        android:id="@+id/notificationTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="10pt"
        android:width="280dp" />

    <Button
        android:id="@+id/notificationCerrarBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Close" />

    <TextView
        android:id="@+id/notificationMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notificationBackground"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lines="4"
        android:width="250dp" />

    <ListView
        android:id="@+id/notificationMessageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notificationCerrarBoton"
        android:layout_alignLeft="@+id/notificationTitleText"
        android:layout_below="@+id/notificationBackground"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

    </ListView>

</RelativeLayout>
